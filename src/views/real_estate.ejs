<%- include('partials/Header') %>
<!-- navabr start -->
<%- include('partials/Navbar') %>
<!-- navabr end  -->

<!-- application form start  -->
<section class="flex justify-center items-center mt-20 mb-10">
    <main id="form_1" class="bg-white w-3/5 rounded-lg px-10 py-14" style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
        <div>
            <div>
                <h1 class="text-4xl font-bold mb-5">Real Estate Agent</h1>
            </div>
            <div>
                <p class="text-lg font-normal text-[#555E67]">Are you currently working with a real estate agent?</p>
            </div>
        </div>
        <div class="mt-5">
            <% if (method==='PUT' ) { %>
                <form action="/portal/dashboard/action/<%- realEstateAgent._id %>?form=12" method="POST">
                    <%} else { %>
                        <form action="/portal/dashboard/action?form=12" method="POST">
                            <% } %>

                <div class="flex justify-start items-center">
                    <% if (realEstateAgent) { %>
                        <div class="flex justify-start items-center gap-2 mr-3">
                            <input type="radio" name="is_real_estate_agent" id="" value="yes" onclick="isRealEstateAgentFunc()" <% if (realEstateAgent.is_real_estate_agent === true) { %>
                                checked
                               <% } %>>
                            <h1>YES</h1>
                        </div>
                        <div class="flex justify-start items-center gap-2">
                            <input type="radio" name="is_real_estate_agent" id="" value="no" onclick="isRealEstateAgentFunc()" <% if (realEstateAgent.is_real_estate_agent === false) { %>
                                checked
                               <% } %>>
                            <h2>No</h2>
                        </div>
                    <% } else { %>
                        <div class="flex justify-start items-center gap-2 mr-3">
                            <input type="radio" name="is_real_estate_agent" id="" value="yes" onclick="isRealEstateAgentFunc()" checked>
                            <h1>YES</h1>
                        </div>
                        <div class="flex justify-start items-center gap-2">
                            <input type="radio" name="is_real_estate_agent" id="" value="no" onclick="isRealEstateAgentFunc()">
                            <h2>No</h2>
                        </div>
                    <% } %>
                    
                </div>

                <div id="real_estate_agent_form">
                    <div>
                        <label class="text-lg font-semibold">Agent First Name</label>
                        <input type="text" name="agent_first_name" value="<%- realEstateAgent.agent_first_name %>"  class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                        <input type="hidden" name="lead_id" value="<%- lead  %>"
                        class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                    </div>

                    <div>
                        <label class="text-lg font-semibold">Agent Last Name</label>
                        <input type="text" name="agent_last_name" value="<%- realEstateAgent.agent_last_name %>" class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                    </div>

                    <div>
                        <label class="text-lg font-semibold">Agent Email</label>
                        <input type="email" name="agent_email" value="<%- realEstateAgent.agent_email %>" class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                    </div>

                    <div>
                        <label class="text-lg font-semibold">Agent Phone</label>
                        <input type="text" name="agent_phone" value="<%- realEstateAgent.agent_phone %>" class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                    </div>
                </div>

                <div class="my-10">
                    <button type="button" class="bg-[#CCCCCC] text-white w-60 h-16 rounded-lg text-2xl font-semibold mr-5">
                        <a href="/portal/dashboard/application?form=2">Go Back</a>
                    </button>
                    <button type="submit" class="bg-[#54D491] text-white w-60 h-16 rounded-lg text-2xl font-semibold">Next Step</button>
                </div>
            </form>
        </div>
    </main>
</section>
<!-- application form ends  -->

<%- include('partials/Footer') %>