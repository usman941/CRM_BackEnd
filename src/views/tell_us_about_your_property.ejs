<%- include('partials/Header') %>
<!-- navabr start -->
<%- include('partials/Navbar') %>
<!-- navabr end  -->

<!-- application form start  -->
<section class="flex justify-center items-center mt-20 mb-10">
    <main id="form_1" class="bg-white w-3/5 rounded-lg px-10 py-14" style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
        <div>
            <div>
                <h1 class="text-4xl font-bold mb-5">Tell Us About Your Property</h1>
            </div>
            <div>
                <p class="text-lg font-normal text-[#555E67]">The subject property address is the same as my current address.</p>
            </div>
        </div>
        <div class="mt-5">
            <% if (method==='PUT' ) { %>
                <form action="/portal/dashboard/action/<%- property._id %>?form=16" method="POST">
                    <%} else { %>
                        <form action="/portal/dashboard/action?form=16" method="POST">
                            <% } %>
                
                <div>
                    <label class="text-lg font-semibold">The Subject Property Address</label>
                    <input type="text" name="subject_property_address" value="<%- property.subject_property_address %>"  class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                    <input type="hidden" name="lead_id" value="<%- lead %>">
                </div>

                <div>
                    <label class="text-lg font-semibold">City</label>
                    <input type="text" name="city" value="<%- property.city %>" class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                </div>

                <div>
                    <label class="text-lg font-semibold">State</label>
                    <input type="text" name="state" value="<%- property.state %>" class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                </div>

                <div>
                    <label class="text-lg font-semibold">Zip</label>
                    <input type="text" name="zip" value="<%- property.zip %>" class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                </div>

                <div class="my-10">
                    <button type="button" class="bg-[#CCCCCC] text-white w-60 h-16 rounded-lg text-2xl font-semibold mr-5">
                        <a href="/portal/dashboard/application?form=7">Go Back</a>
                    </button>
                    <button type="submit" class="bg-[#54D491] text-white w-60 h-16 rounded-lg text-2xl font-semibold">Next Step</button>
                </div>
            </form>
        </div>
    </main>
</section>
<!-- application form ends  -->

<%- include('partials/Footer') %>