<%- include('partials/Header') %>
<!-- navabr start -->
<%- include('partials/Navbar') %>
<!-- navabr end  -->

<!-- application form start  -->
<section class="flex justify-center items-center mt-20 mb-10">
    <main id="form_1" class="bg-white w-3/5 rounded-lg px-10 py-14" style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
        <div>
            <div>
                <h1 class="text-4xl font-bold mb-5">Co Borrower Income</h1>
            </div>
            <div>
                <p class="text-lg font-normal text-[#555E67]">Select the Current type of income you'd like to add.</p>
            </div>
            <div>
                <p class="text-lg font-normal text-[#555E67]"><%- borrowerIncome._id ? "You Have Selected:" + borrowerIncome.income_type : "" %></p>
            </div>
        </div>
        <div class="mt-5">
            <% if (method==='PUT' ) { %>
                <form action="/portal/dashboard/action/<%- borrowerIncome._id %>?form=20" method="POST">
                    <%} else { %>
                        <form action="/portal/dashboard/action?form=20" method="POST">
                            <% } %>
                
                <div class="flex flex-col justify-start items-start">
                    <input type="hidden" name="lead_id" value="<%- lead %>">
                    <div class="flex justify-start items-center gap-2 mr-3">
                        <input type="radio" name="income_type" id="" value="Employment">
                        <h1>Employment</h1>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="Independent Contractor">
                        <h2>Independent Contractor</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="Military">
                        <h2>Military</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="Rental">
                        <h2>Rental</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="Social Security">
                        <h2>Social Security</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="Pension">
                        <h2>Pension</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="Self Employment">
                        <h2>Self Employment</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="is_property_type" id="" value="Other">
                        <h2>Other</h2>
                    </div>
                    <div class="flex justify-start items-center gap-2">
                        <input type="radio" name="income_type" id="" value="No Income">
                        <h2>No Income</h2>
                    </div>
                </div>

                <div class="my-10">
                    <button type="button" class="bg-[#CCCCCC] text-white w-60 h-16 rounded-lg text-2xl font-semibold mr-5">
                        <a href="/portal/dashboard/application?form=5">Go Back</a>
                    </button>
                    <button type="submit" class="bg-[#54D491] text-white w-60 h-16 rounded-lg text-2xl font-semibold">Next Step</button>
                </div>
            </form>
        </div>
    </main>
</section>
<!-- application form ends  -->

<%- include('partials/Footer') %>