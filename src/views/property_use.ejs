<%- include('partials/Header') %>
<!-- navabr start -->
<%- include('partials/Navbar') %>
<!-- navabr end  -->

<!-- application form start  -->
<section class="flex justify-center items-center mt-20 mb-10">
    <main id="form_1" class="bg-white w-3/5 rounded-lg px-10 py-14" style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
        <div>
            <div>
                <h1 class="text-4xl font-bold mb-5">Property Use</h1>
            </div>
            <div>
                <p class="text-lg font-normal text-[#555E67]">How do you Intend to use the Property?</p>
            </div>
        </div>
        <div class="mt-5">
            <% if (method==='PUT' ) { %>
                <form action="/portal/dashboard/action/<%- loanDetails._id %>?form=7" method="POST">
                    <%} else { %>
                        <form action="/portal/dashboard/action?form=7" method="POST">
                            <% } %>
                
                <div class="flex flex-col justify-start items-start">
                    <% if (loanDetails) { %>
                        <div class="flex justify-start items-center gap-2 mr-3">
                            <input type="radio" name="is_property_use" id="" value="Primary Home" <% if (loanDetails.property_use === "Primary Home") { %>
                                checked
                               <% } %>>
                            <h1>Primary Home</h1>
                        </div>
                        <div class="flex justify-start items-center gap-2">
                            <input type="radio" name="is_property_use" id="" value="Investment" <% if (loanDetails.property_use === "Investment") { %>
                                checked
                               <% } %>>
                            <h2>Investment</h2>
                        </div>
                        <div class="flex justify-start items-center gap-2">
                            <input type="radio" name="is_property_use" id="" value="Second Home" <% if (loanDetails.property_use === "Second Home") { %>
                                checked
                               <% } %>>
                            <h2>Second Home</h2>
                        </div>
                    <% } else { %>
                        <div class="flex justify-start items-center gap-2 mr-3">
                            <input type="radio" name="is_property_use" id="" value="Primary Home" checked>
                            <h1>Primary Home</h1>
                        </div>
                        <div class="flex justify-start items-center gap-2">
                            <input type="radio" name="is_property_use" id="" value="Investment">
                            <h2>Investment</h2>
                        </div>
                        <div class="flex justify-start items-center gap-2">
                            <input type="radio" name="is_property_use" id="" value="Second Home">
                            <h2>Second Home</h2>
                        </div>
                    <% } %>
                    
                </div>

                <div class="my-10">
                    <button type="button" class="bg-[#CCCCCC] text-white w-60 h-16 rounded-lg text-2xl font-semibold mr-5">
                        <a href="/portal/dashboard/application?form=6">Go Back</a>
                    </button>
                    <button type="submit" class="bg-[#54D491] text-white w-60 h-16 rounded-lg text-2xl font-semibold">Next Step</button>
                </div>
            </form>
        </div>
    </main>
</section>
<!-- application form ends  -->

<%- include('partials/Footer') %>