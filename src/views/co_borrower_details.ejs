<%- include('partials/Header') %>
    <!-- navabr start -->
    <%- include('partials/Navbar') %>
        <!-- navabr end  -->

        <!-- application form start  -->
        <section class="flex justify-center items-center mt-20 mb-10">
            <main id="form_1" class="bg-white w-3/5 rounded-lg px-10 py-14"
                style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                <div>
                    <div>
                        <h1 class="text-4xl font-bold mb-5">Co-Borrower Details</h1>
                    </div>
                    <div>
                        <p class="text-lg font-normal text-[#555E67]">Are you applying with another borrower?</p>
                    </div>
                </div>
                <div class="mt-5">
                    <% if (method==='PUT' ) { %>
                        <form action="/portal/dashboard/action/<%- coBorrower_details._id %>?form=3" method="POST">
                            <%} else { %>
                                <form action="/portal/dashboard/action?form=3" method="POST">
                                    <% } %>
                                        <div class="flex justify-start items-center">
                                            <% if (coBorrower_details) { %>
                                                <div class="flex justify-start items-center gap-2 mr-3">
                                                    <input type="radio" name="is_co_borrower_details" id="" value="yes"
                                                        onclick="coBorrowerDetailsFunc()" <% if (coBorrower_details.is_co_borrower === true) { %>
                                                         checked
                                                        <% } %>>
                                                    <h1>YES</h1>
                                                </div>
                                                <div class="flex justify-start items-center gap-2">
                                                    <input type="radio" name="is_co_borrower_details" id="" value="no"
                                                        onclick="coBorrowerDetailsFunc()" <% if (coBorrower_details.is_co_borrower === false) { %>
                                                         checked
                                                        <% } %>>
                                                    <h2>No</h2>
                                                </div>
                                            <% } else { %>
                                                <div class="flex justify-start items-center gap-2 mr-3">
                                                    <input type="radio" name="is_co_borrower_details" id="" value="yes"
                                                        onclick="coBorrowerDetailsFunc()">
                                                    <h1>YES</h1>
                                                </div>
                                                <div class="flex justify-start items-center gap-2">
                                                    <input type="radio" name="is_co_borrower_details" id="" value="no"
                                                        onclick="coBorrowerDetailsFunc()" checked>
                                                    <h2>No</h2>
                                                </div>
                                                <% } %>
                                            
                                        </div>
                                        <div id="co_borrower_details_form">
                                            <div>
                                                <label class="text-lg font-semibold">Suffix</label>
                                                <input type="text" name="suffix"
                                                    value="<%- coBorrower_details.suffix  %>"
                                                    class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                                    <input type="hidden" name="lead_id" value="<%- lead  %>"
                                                    class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                            </div>

                                            <div>
                                                <label class="text-lg font-semibold">Email</label>
                                                <input type="email" name="email"
                                                value="<%- coBorrower_details.email  %>"
                                                    class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                            </div>

                                            <div>
                                                <label class="text-lg font-semibold">Phone Number</label>
                                                <input type="text" name="phone_number"
                                                value="<%- coBorrower_details.phone_number  %>"
                                                    class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                            </div>

                                            <div>
                                                <label class="text-lg font-semibold">Martial Status</label>
                                                <input type="text" name="martial_status"
                                                value="<%- coBorrower_details.martial_status  %>"
                                                    class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                            </div>

                                            <div>
                                                <label class="text-lg font-semibold">Current Address</label>
                                                <input type="text" name="current_address"
                                                value="<%- coBorrower_details.current_address  %>"
                                                    class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                            </div>

                                            <div class="grid grid-cols-2 gap-2 my-2">
                                                <div>
                                                    <label class="text-lg font-semibold">Year at Current Address</label>
                                                    <input type="text" name="years_at_current_address"
                                                    value="<%- coBorrower_details.years_at_current_address  %>"
                                                        class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                                </div>
                                                <div>
                                                    <label class="text-lg font-semibold">Month at Current
                                                        Address</label>
                                                    <input type="text" name="month_at_current_address"
                                                    value="<%- coBorrower_details.month_at_current_address  %>"
                                                        class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                                </div>
                                            </div>
                                            <div class="grid grid-cols-2 gap-2 my-2">
                                                <div>
                                                    <label class="text-lg font-semibold">Current Monthly Rent Amount
                                                        (optional)</label>
                                                    <input type="text" name="current_monthly_rent_amount"
                                                    value="<%- coBorrower_details.current_monthly_rent_amount  %>"
                                                        class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                                </div>
                                                <div>
                                                    <label class="text-lg font-semibold">Mailing Address
                                                        (optional)</label>
                                                    <input type="text" name="mailing_address"
                                                    value="<%- coBorrower_details.mailing_address  %>"
                                                        class="bg-[#eef0f4] w-full h-12 rounded-md px-3 py-2 font-semibold outline-none">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="my-10">
                                            <button type="button"
                                                class="bg-[#CCCCCC] text-white w-60 h-16 rounded-lg text-2xl font-semibold mr-5">
                                                <a href="/portal/dashboard/application?form=2">Go Back</a>
                                            </button>
                                            <button type="submit"
                                                class="bg-[#54D491] text-white w-60 h-16 rounded-lg text-2xl font-semibold">Next
                                                Step</button>
                                        </div>
                                </form>
                </div>
            </main>
        </section>
        <!-- application form ends  -->

        <%- include('partials/Footer') %>